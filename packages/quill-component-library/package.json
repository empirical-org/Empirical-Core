    "draft-js-export-html": "^0.6.0",
    "draft-js-plugins-editor": "^2.0.4",
    "draft-js-richbuttons-plugin": "^2.2.0",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-router": "^3.0.5",
