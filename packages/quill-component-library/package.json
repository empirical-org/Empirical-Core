    "core-js": "^2.5.3",
    "node-sass": "^4.7.2",
    "node-sass-chokidar": "^0.0.3",
    "rollup-plugin-commonjs": "^8.2.6",
    "rollup-plugin-generate-package-json": "^1.0.0",
    "rollup-plugin-node-resolve": "^3.0.2",
    "rollup-plugin-postcss": "^1.2.5",
    "rollup-plugin-tslint": "^0.1.34",
