<% current_path = request.env['PATH_INFO'] %>
<% on_sign_up_or_log_in = ['account/new', '/session', 'password_reset', 'sign-up', 'finish_set_up'].any? { |str| current_path.include?(str)} %>

<% navbar_class_name = on_sign_up_or_log_in ? "non-standard-navbar navbar" : "navbar" %>

<% if show_site_navigation? %>
  <nav class="<%=navbar_class_name%>" role="navigation">
  	<div class="container">
  		<%= render partial: 'sub_header' %>
  	</div>
  </nav>
<% end %>

<% if show_site_navigation? && current_path.include?('cms') %>
	<div class="navbar-divider-bar green"></div>'
<% end %>
