<% state = current_user.premium_state %>
<% is_trial = current_user.last_expired_subscription&.is_trial? %>

<% if state == NavigationHelper::TRIAL %>
  <div class="premium-tab-copy">
    <span>Premium</span>
    <div class='large-diamond-icon is-in-middle'></div>
    <span><%= current_user.trial_days_remaining %> Days Left</span>
  </div>
<% elsif state == NavigationHelper::LOCKED && is_trial %>
  <div class="premium-tab-copy">
    <span>Premium</span>
    <div class='large-diamond-icon is-in-middle'></div>
    <span>Trial Expired</span>
  </div>
<% elsif state == NavigationHelper::LOCKED %>
  <div class="premium-tab-copy">
    <span>Premium</span>
    <div class='large-diamond-icon is-in-middle'></div>
    <span>Expired</span>
  </div>
<% elsif state == NavigationHelper::NONE %>
  <div class="premium-tab-copy">
    <span>Explore Premium</span>
    <div class='large-diamond-icon'></div>
  </div>
<% else %>
  <div class="premium-tab-copy">
    <span>Explore Premium</span>
    <div class='large-diamond-icon'></div>
  </div>
<% end %>
