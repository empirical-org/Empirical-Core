      <section class="tool-sign-up">
          <h1 class='q-h1'>
              Sign up to start Quill Grammar in your class today!
          </h1>
          <a href='/account/new' class="q-button cta-button bg-quillgreen text-white">Sign Up</a>
      </section>

    <% else %>
    <section class="tool-sign-up">
        <h1 class='q-h1'>
            Get started now! Assign Quill Grammar.
        </h1>
        <a href='/assign/activity-library?activityClassificationFilters[]=sentence' class="q-button cta-button bg-quillgreen text-white">Assign</a>
    </section>
