<%= form_with(model: response, local: true, url: (@response.new_record? ? [@question, @response] : @response)) do |form| %>
  <% if response.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(response.errors.count, "error") %> prohibited this response from being saved:</h2>

      <ul>
      <% response.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :question_id, class: "form-label" %>
    <%= form.text_field :question_id, value: (@response.new_record? ? @question.id : @response.question_id), class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :text, class: "form-label" %>
    <%= form.text_area :text, class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
