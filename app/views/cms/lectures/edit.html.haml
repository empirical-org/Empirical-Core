%h2 Edit lecture

= form_for @lecture, url: cms_lecture_path(@lecture), html: {class: 'form-horizontal'} do |f|
  .control-group
    = f.label :title, class: 'control-label'
    .controls
      = f.text_field :title
  .control-group
    = f.label :lecturer_name, class: 'control-label'
    .controls
      = f.text_field :lecturer_name
  .control-group
    = f.label :description, class: 'control-label'
    .controls
      = f.text_area :description
  .control-group
    = f.label :course_id, class: 'control-label'
    .controls
      = f.select :course_id, CMS::Course.all.collect {|r| [ r.title, r.id ] }
  .form-actions
    = f.submit 'Save', class: 'btn btn-primary', :'data-disable-with' => 'Saving...'
