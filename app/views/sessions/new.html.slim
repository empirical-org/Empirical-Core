.container
  .row
    .account-form.col-sm-6.col-md-4.col-md-offset-4
      - if flash[:error]
        .error= flash[:error]

      br
      br
      br
      br
      = form_for @user, url: session_path(redirect: params[:redirect]) do |f|
        = f.label :email
        = f.text_field :email, placeholder: 'Email or Username'
        = f.label :password
        = f.password_field :password, placeholder: 'Password', class: 'Password'
        = f.submit 'Sign in' do
        br
        br
        - if @district_id
          = link_to image_tag('http://assets.clever.com/sign-in-with-clever/sign-in-with-clever-medium.png'), "https://clever.com/oauth/authorize?#{ {response_type: 'code', redirect_uri: Clever::REDIRECT_URL, client_id: Clever::CLIENT_ID, scope: 'read:user', district_id: @district_id}.to_param }"
          br
        br
        br
        div
          = link_to 'Forgot your password?', password_reset_index_path


